<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.5.1//EN"
  "http://google-web-toolkit.googlecode.com/svn/tags/2.5.1/distro-source/core/src/gwt-module.dtd">
<module rename-to='domdistillerjstest'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.core.Core'/>
  <inherits name='com.google.gwt.user.User'/>
  <inherits name='com.google.gwt.json.JSON'/>
  <inherits name='DomDistiller'/>
  <inherits name='TestProto'/>
  <inherits name='Proto'/>

  <set-property name='user.agent' value='safari'/>
  <set-property name='compiler.stackMode' value='emulated'/>
  <set-configuration-property name='compiler.emulatedStack.recordFileNames' value='true'/>
  <set-configuration-property name='compiler.emulatedStack.recordLineNumbers' value='true'/>

  <entry-point class='com.dom_distiller.client.JsTestEntry'/>

  <generate-with class='com.dom_distiller.client.JsTestEntryGenerator'>
    <when-type-assignable class='com.dom_distiller.client.JsTestSuiteBuilder'/>
  </generate-with>

  <!-- Specify the paths for translatable code                    -->
  <source path='client' excludes='rebind/*'/>

  <!-- Use the SingleScriptLinker. -->
  <add-linker name='sso'/>
</module>
